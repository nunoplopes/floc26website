// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Conference {
  id          String   @id @default(cuid())
  title       String   // "WELCOME TO FLOC 2026"
  subtitle    String   // "LOGIC CONFERENCE"
  fullDate    String   // "13 - 29 JULY 2026"
  location    String   // "FLOC'2026 will take place in LISBON, PORTUGAL"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  events      Event[]
}

model Event {
  id          String   @id @default(cuid())
  name        String   // "SUMMER SCHOOL", "CONFERENCE", "WORKSHOP"
  dates       String   // "13 - 17 JULY", "22-23 & 26-29 JULY", "18-19 & 24-25 JULY"
  conferenceId String
  conference  Conference @relation(fields: [conferenceId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Programs {
  id          String   @id @default(cuid())
  date        String   // "13", "18", "20", "24", "26"
  endDate     String?  // "17", "19", "23", "25", "29"
  title       String   // "SUMMER SCHOOL", "WORKSHOPS", "WEEK 1", "WEEK 2"
  color       String   // "text-orange-500", "text-sky-400"
  barColor    String   // "bg-orange-500", "bg-sky-400"
  conferences String[] // Array of conference names
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}